{
  "name": "n8n-nodes-pagbank-connect",
  "version": "1.3.0",
  "description": "n8n integration with PagBank Connect for Brazilian payment processing (PIX, Boleto, Credit Card, Payment Link, etc)",
  "keywords": [
    "n8n-community-node-package",
    "n8n-community-node",
    "pagbank",
    "pagseguro",
    "payment",
    "brazil",
    "pix",
    "boleto",
    "credit-card"
  ],
  "license": "MIT",
  "homepage": "https://pbintegracoes.com/n8n",
  "author": {
    "name": "Ricardo Martins",
    "email": "ricardo@pbintegracoes.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/r-martins/PagBank-n8n.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:all",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint \"nodes/**/*.ts\" \"credentials/**/*.ts\" package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -s"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PagBankConnect.credentials.js"
    ],
    "nodes": [
      "dist/nodes/PagBank/PagBankSimple.node.js",
      "dist/nodes/PagBank/PagBankWebhook.node.js"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.42.0",
    "eslint-plugin-n8n-nodes-base": "^1.11.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
